<?xml version="1.0" encoding="utf-8"?>
<extension version="3.1" type="plugin" group="content" method="upgrade">
	<name>Content - CaveView</name>
	<author>Angus Sawyer</author>
	<creationDate>September 2016</creationDate>
	<copyright>Copyright (C) 2016 Angus Sawyer. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.0.3</version>
	<description>PLG_CONTENT_COOTS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="caveview">caveview.php</filename>
		<filename>index.html</filename>	
		<folder>language</folder>
	</files>
	<media folder="media" destination="plg_caveview">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.html</filename>	
    </media>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="Survey Path"
					type="text"
					default="/surveys"
					description="PLG_CONTENT_CAVEVIEW_SURVEY_PATH_DESC"
					label="PLG_CONTENT_CAVEVIEW_SURVEY_PATH_LABEL"
					size="10"
				/>
				<field
					name="Terrain Path"
					type="text"
					default="/terrain"
					description="PLG_CONTENT_CAVEVIEW_TERRAIN_PATH_DESC"
					label="PLG_CONTENT_CAVEVIEW_TERRAIN_PATH_LABEL"
					size="10"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
